[Unit]
Description=Alpha-Z Triple Strategy Trading Bot
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/vivik
ExecStart=/usr/bin/python3 /root/vivik/alpha_z_triple_strategy.py --scan
Restart=always
RestartSec=10
StandardOutput=append:/root/vivik/alpha_z_trading.log
StandardError=append:/root/vivik/alpha_z_trading.log

# 환경 변수 (필요시)
Environment="PYTHONUNBUFFERED=1"

# 프로세스 제한 (메모리 누수 방지)
MemoryLimit=2G
CPUQuota=200%

[Install]
WantedBy=multi-user.target
